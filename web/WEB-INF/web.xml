<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>ums.loginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/HTML/viewCourse</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddCourseServlet</servlet-name>
        <servlet-class>ums.AddCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCourseServlet</servlet-name>
        <url-pattern>/JSP/addCourse</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GenerateTimetableServlet</servlet-name>
        <servlet-class>ums.GenerateTimetableServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GenerateTimetableServlet</servlet-name>
        <url-pattern>/generateTimetable</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
</web-app>
